<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".colorActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:gravity="center_horizontal"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.spektrumv3.ImageDisplayFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="325dp"
        app:layout_constraintBottom_toTopOf="@+id/color3TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <ImageView
        android:id="@+id/analyzeImageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="94dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color4textView" />

    <TextView
        android:id="@+id/color1TextView"
        android:layout_width="0dp"
        android:layout_height="121dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/color2TextView"
        app:layout_constraintEnd_toStartOf="@+id/color2TextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/color2TextView"
        android:layout_width="83dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/color3TextView"
        app:layout_constraintStart_toEndOf="@+id/color1TextView" />

    <TextView
        android:id="@+id/color3TextView"
        android:layout_width="0dp"
        android:layout_height="121dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/color2TextView"
        app:layout_constraintEnd_toStartOf="@+id/color4textView"
        app:layout_constraintStart_toEndOf="@+id/color2TextView" />

    <TextView
        android:id="@+id/color4textView"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_marginEnd="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/color3TextView"
        app:layout_constraintEnd_toStartOf="@+id/analyzeImageView"
        app:layout_constraintStart_toEndOf="@+id/color3TextView" />

    <TextView
        android:id="@+id/color5textView"
        android:layout_width="0dp"
        android:layout_height="122dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/color4textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color4textView" />


</androidx.constraintlayout.widget.ConstraintLayout>